<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.Design.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/red_light</item>
        <item name="colorPrimaryDark">@color/red_light</item>
        <item name="colorAccent">@color/red_light</item>
    </style>

    <!-- tablayoutçš„stytle -->
    <style name="MyTablayoutstyle" parent="Base.Widget.Design.TabLayout">
        <item name="tabBackground">@color/white</item>
        <item name="tabIndicatorColor">@color/white</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="android:textSize">15sp</item>
    </style>
    
    <style name="NoTitle" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
    </style>

    <style name="common_button_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@drawable/selector_red_corners_view</item>
        <item name="android:padding">6.0dip</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>
    <style name="common_view_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@drawable/selector_white_corners</item>
        <item name="android:padding">6.0dip</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>
    <style name="common_view_style1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@drawable/selector_red_corners</item>
        <item name="android:padding">6.0dip</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="Dialog_Fullscreen">
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorPrimary">@color/black</item>
    </style>
</resources>
